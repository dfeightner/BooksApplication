@model Book

<h1>Update Book</h1>


<div class="border col-md-10">
    <form asp-action="Edit">


        <input type="hidden" asp-for="BookId" />

        <div class="form-group m-4">
            <label asp-for="BookTitle" class="control-label"></label>
            <input asp-for="BookTitle" class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="ImgUrl" class="control-label"></label>
            <input type="file" name="imgFile" asp-for="ImgUrl" class="form-control" />
        </div>

        <div class="form-group m-4">
            <input type="submit" value="Update Changes" class="form-control btn btn-primary" />
        </div>



    </form>




</div>